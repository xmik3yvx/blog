
<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<% if current_user==@user %>  
  
     <h2>Add a post:</h2>
  <%= form_for([@user, @user.posts.build]) do |f| %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%= f.text_area :user_id %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %> 
  
  
<% end %>
<% if @user.posts.any? %>
      <h3>posts (<%= @user.posts.count %>)</h3>
      
        
      
    <% end %>

