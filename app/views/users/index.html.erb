<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= paginate @users %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
		
		<td><button type="button" class="btn btn-default btn-xs">
                <%= link_to ' Show', user %>
              </button></td>
		
		<% if current_user == user %>
		  <td><button type="button" class="btn btn-default btn-xs">
                <%= link_to ' Edit', edit_user_path(user) %>
              </button></td>
			  
		  <td><button type="button" class="btn btn-default btn-xs">
                <%= link_to ' Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }  %>
              </button></td>
          
		<% end %>
      </tr>
    <% end %>
  </tbody>
  
</table>

<br>

